{
  "compilerOptions": {
    "target": "es6",                         
    "module": "commonjs",                    
    "lib": ["es6","dom"],                       
    "esModuleInterop": true,                  
    "resolveJsonModule": true,                
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "./",
    "noImplicitAny" : false,
    "downlevelIteration": true,
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
